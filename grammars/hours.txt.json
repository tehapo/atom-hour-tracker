{
  "scopeName": "source.hours.txt",
  "name": "Hours",
  "fileTypes": [
    "hours.txt"
  ],
  "patterns": [
    {
      "comment": "Comment line",
      "match": "^#.*$",
      "name": "comment.line.hours"
    },
    {
      "comment": "Date line",
      "match": "(?i)^(ma|ti|ke|to|pe|la|su).*$",
      "name": "keyword.date.hours"
    },
    {
      "comment": "Time input",
      "match": "([0-9]{2}\\.[0-9]{2})",
      "name": "entity.name.function.hours"
    },
    {
      "comment": "Negative time modifier",
      "match": "(\\-([0-9]+)\\.([0-9]+)(h))",
      "name": "variable.time.hours"
    },
    {
      "comment": "Positive time modifier",
      "match": "(\\+([0-9]+)\\.([0-9]+)(h))",
      "name": "string.time.hours"
    }
  ]
}
